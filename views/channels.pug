extends ./layout.pug

block title
    title Stroke! chat

block styles
    link(rel='stylesheet', href='/css/register.css')

block content
    ul.pages
        li.register.page
            div.container
                h3.title Kanalliste
                table.table.table-striped
                    each channel in channels
                        tr
                            td= channel.id
                            td= channel.name
                            td
                                form(action='/channels/' + channel.id, method='post')
                                    input(type='hidden', name='_method', value='DELETE')
                                    button(type='submit', class='btn btn-default') X

            form.form(action='/channels', method='post')
                h3.title Neuen Kanal anlegen
                input(type='text', name='id', placeholder='Identifier', maxlength='14')
                br
                input(type='text', name='name', placeholder='Name')
                br
                button.btn.btn-primary Erstellen
